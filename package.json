{
  "name": "rfid-server",
  "version": "1.0.0",
  "description": "Servidor RFID para ESP32 com PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "node -e \"const db = require('./infra/database'); db.testConnection().then(() => console.log('✅ Banco conectado!')).catch(e => console.error('❌ Erro:', e.message))\"",
    "check": "node -c server.js controllers/rfidController.js infra/database.js",
    "db:test": "node -e \"require('./infra/database').testConnection()\"",
    "db:setup": "psql $DATABASE_URL -f database/schema.sql"
  },
  "keywords": [
    "rfid",
    "esp32",
    "postgresql",
    "iot",
    "nodejs"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
